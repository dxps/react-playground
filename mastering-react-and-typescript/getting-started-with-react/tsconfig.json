{
    "compileOnSave": false,
    "buildOnSave": false,
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "removeComments": false,
        "noEmitHelpers": false,
        "sourceMap": true,
        "inlineSourceMap": false,
        "suppressImplicitAnyIndexErrors": true,
        "jsx": "react"
    },
    "exclude": [
        "node_modules"
    ],
